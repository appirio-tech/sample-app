span(ng-show='vm.loading')
  | Processing....
span(ng-show='vm.error', ng-model='vm.error')

form(ng-submit='vm.submit()', method='post')
  input(type='text', ng-model='vm.handle', required='required', placeholder='username', autofocus='autofocus', ng-disabled='vm.loading')
  br
  input(type='text', ng-model='vm.token', required='required', placeholder='token', ng-disabled='vm.loading')
  br
  input(type='password', ng-model='vm.password', required='required', placeholder='password', ng-disabled='vm.loading')
  br
  button.action(type='submit', ng-disabled='vm.loading') reset
